{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./dist/types", // Output directory for type files
    "emitDeclarationOnly": true, // Only emit .d.ts files during this step
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "types": ["vitest", "node"]
  },
  "include": ["src/**/*.ts", "__tests__/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
